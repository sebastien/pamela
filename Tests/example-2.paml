# HTML HEAD
# ============================================================================

@head:
	<style=@style
	<meta(name="keywords"):juicy,wiki,prototype,template

@style:[css|
	html, body {
		margin:  0;
		padding: 0;
	}
	#toolbar ul {
		list-style-type: none;
	}
]

